{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "node16",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "test"
  ]
}